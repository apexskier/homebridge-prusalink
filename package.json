{
  "displayName": "PrusaLink",
  "name": "@apexskier/homebridge-prusalink",
  "version": "1.0.1",
  "description": "A short description about what your plugin does.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/apexskier/homebridge-prusalink.git"
  },
  "bugs": {
    "url": "https://github.com/apexskier/homebridge-prusalink/issues"
  },
  "engines": {
    "node": "^18.17.0 || ^20.9.0",
    "homebridge": "^1.6.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "prettier --check . && eslint src/**.ts --max-warnings=0",
    "fix": "prettier --write . && eslint src/**.ts --fix",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "generateApi": "openapi-generator-cli generate -i https://github.com/prusa3d/Prusa-Link-Web/blob/377e1509542100efe1689415d603d7a330d28d3c/spec/openapi.yaml -g typescript"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "homebridge": "^1.6.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
